<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/chat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/chat_background_color"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/h_separator_top" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:background="@drawable/h_separator_bottom" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:paddingStart="0dp">

        <FrameLayout
            android:id="@+id/frame_emoji_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="9dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp">

            <ImageView
                android:id="@+id/emoji_btn"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="bottom"
                android:background="@drawable/ic_emoji1"
                android:scaleType="center"
                tools:ignore="ContentDescription" />
        </FrameLayout>


        <EditText
            android:id="@+id/message_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/enter_message_hint"
            android:maxLines="7"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <Button
            android:id="@+id/btn_send"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:minWidth="0dp"
            android:text="@string/send_message_icon"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_emoji_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/chat_bubble_stroke"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/emoji_frame_icon0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/emoji_image_icon0"
                    android:layout_width="@dimen/emoji_icon"
                    android:layout_height="@dimen/emoji_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_emoji0"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/emoji_icon_line0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/attachment_icon_unknown" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/emoji_frame_icon1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/emoji_image_icon1"
                    android:layout_width="@dimen/emoji_icon"
                    android:layout_height="@dimen/emoji_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_emoji1"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/emoji_icon_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/attachment_icon_unknown" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/emoji_frame_icon2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/emoji_image_icon2"
                    android:layout_width="@dimen/emoji_icon"
                    android:layout_height="@dimen/emoji_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_emoji2"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/emoji_icon_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/attachment_icon_unknown" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/emoji_frame_icon3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/emoji_image_icon3"
                    android:layout_width="@dimen/emoji_icon"
                    android:layout_height="@dimen/emoji_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_emoji3"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/emoji_icon_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/attachment_icon_unknown" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/emoji_frame_icon4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/emoji_image_icon4"
                    android:layout_width="@dimen/emoji_icon"
                    android:layout_height="@dimen/emoji_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_emoji4"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/emoji_icon_line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/attachment_icon_unknown" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/emoji_frame_icon5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/emoji_image_icon5"
                    android:layout_width="@dimen/emoji_icon"
                    android:layout_height="@dimen/emoji_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_emoji5"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/emoji_icon_line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/attachment_icon_unknown" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/emoji_frame_icon6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/emoji_icon"
                    android:layout_height="@dimen/emoji_icon"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_emoji6"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/attachment_icon_unknown" />
            </FrameLayout>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/emoji_pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"></android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>